  <title>Te amo</title>
  <style>
    :root{--bg:#0f1724;--accent:#ff4d6d}
    html,body{height:100%;margin:0}
    body{
      display:flex;
      align-items:center;
      justify-content:center;
      background: radial-gradient(circle at 20% 20%, #102038 0%, #071021 40%, var(--bg) 100%);
      font-family: system-ui, -apple-system, "Segoe UI", Roboto, "Helvetica Neue", Arial;
      color: white;
      overflow:hidden;
    }
    .stage{
      text-align:center;
      padding:2rem;
      transform:translateZ(0);
    }
    h1{
      margin:0;
      font-size: clamp(48px, 12vw, 160px);
      letter-spacing: -0.02em;
      line-height:0.9;
      font-weight:800;
      text-transform: none;
      background: linear-gradient(90deg, #fff 0%, #ffd6de 20%, var(--accent) 60%);
      -webkit-background-clip: text;
      background-clip: text;
      color: transparent;
      filter: drop-shadow(0 10px 30px rgba(0,0,0,0.6));
      animation: pop 1s ease both;
    }
    @keyframes pop{
      0%{transform:scale(0.7);opacity:0}
      60%{transform:scale(1.05);opacity:1}
      100%{transform:scale(1)}
    }
    .heart{
      display:inline-block;
      width: min(18vw,120px);
      height: min(18vw,120px);
      margin-top:1rem;
      transform:translateY(6px);
    }
    .controls{position:fixed;left:12px;bottom:12px;font-size:14px;color:#cbd5e1}
    button{background:transparent;border:1px solid rgba(255,255,255,0.12);color:inherit;padding:6px 10px;border-radius:8px;cursor:pointer}
