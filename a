<body>
  <main class="stage">
    <h1 id="msg">te amo</h1>
    <svg class="heart" viewBox="0 0 32 29" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
      <path fill="var(--accent)" d="M23.6 0c-2.7 0-4.9 1.9-5.6 4.4C16.3 1.9 14.1 0 11.4 0 5.1 0 .6 4.9 .6 11.1c0 6.7 7.1 12 12.4 17 1.6 1.3 3.6 1.3 5.2 0 5.3-5 12.4-10.3 12.4-17C31.4 4.9 26.9 0 20.6 0z"/>
    </svg>
  </main>

  <div class="controls">
    <button id="cambia">Cambiar color</button>
    <button id="grande">Pantalla completa</button>
  </div>

  <script>
    const root = document.documentElement;
    const colors = ['#ff4d6d','#ff7a59','#f59e0b','#06b6d4','#8b5cf6','#ef4444'];
    let i = 0;
    document.getElementById('cambia').addEventListener('click', ()=>{
      i = (i+1) % colors.length;
      root.style.setProperty('--accent', colors[i]);
    });

    document.getElementById('grande').addEventListener('click', async ()=>{
      try{
        if (!document.fullscreenElement) await document.documentElement.requestFullscreen();
        else await document.exitFullscreen();
      }catch(e){}
    });

    const heart = document.querySelector('.heart path');
    setInterval(()=>{
      heart.animate([
        { transform: 'scale(1)' },
        { transform: 'scale(1.08)' },
        { transform: 'scale(1)' }
      ],{ duration: 900, easing: 'ease-in-out' });
    }, 950);
  </script>
</body>
</html>
